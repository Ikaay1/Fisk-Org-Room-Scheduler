generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String  @id @default(cuid())
  email      String  @unique
  password   String
  isVerified Boolean @default(false)
}

model Room {
  id         String   @id @default(cuid())
  building   String
  features   String[]
  roomNumber String   @default("")
  capacity   Int
  isFree     Boolean  @default(true)

  @@unique([building, roomNumber], name: "building_roomNumber")
}

model Club {
  id   String @id @default(cuid())
  name String @unique
}
